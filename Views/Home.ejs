<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    #para {
      color: blue;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>

  <% if (id) { %>
    <p>
      Your Short URL is â‡’
      <a href="http://localhost:8000/url/<%= id %>" id="para">
        http://localhost:8000/<%= id %>
      </a>
    </p>
  <% } %>


    <% url.forEach(item => { %>
      <p>
        <a href="http://localhost:8000/url/<%= item.shortid %>">
          <%= item.shortid %>
        </a>
      </p>
      <p><%= item.redirectURL %></p>
      <p>Clicks: <%= item.VisitHistory.length %></p>
      <hr>
    <% }) %>

  <form action="/url/home" method="post">
    <input type="text" name="url" placeholder="Enter full URL here">
    <button type="submit">SUBMIT</button>
  </form>

</body>
</html>
